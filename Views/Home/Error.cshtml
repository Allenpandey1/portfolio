@{
    ViewData["Title"] = "Error";
}

<section class="py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                <h1 class="display-4 fw-bold mt-4 mb-3">Oops! Something went wrong</h1>
                <p class="lead text-muted mb-4">
                    We're sorry, but an error occurred while processing your request.
                </p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-house me-2"></i>Go Back Home
                </a>
            </div>
        </div>
    </div>
</section>

