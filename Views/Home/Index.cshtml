@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6 text-center text-lg-start mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold mb-4">Hello, I'm <span class="text-warning">Allen Pandey</span></h1>
                <p class="lead mb-4">
                    A passionate .NET developer with expertise in building modern web applications 
                    using ASP.NET Core, C#, and cloud technologies.
                </p>
                <p class="mb-4">
                    Welcome to my portfolio! I specialize in creating scalable, maintainable, and 
                    user-friendly applications. Explore my work, learn about my experience, and 
                    feel free to reach out.
                </p>
                <div class="d-flex flex-wrap gap-3 justify-content-center justify-content-lg-start">
                    <a asp-controller="About" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="bi bi-person me-2"></i>Learn More About Me
                    </a>
                    <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-folder me-2"></i>View My Projects
                    </a>
                    <a asp-controller="Contact" asp-action="Index" class="btn btn-warning btn-lg">
                        <i class="bi bi-envelope me-2"></i>Get In Touch
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <!-- Photo Placeholder -->
                <div class="profile-photo-container mx-auto">
                    <img src="https://via.placeholder.com/400x400/0d6efd/ffffff?text=Allen+Pandey" 
                         alt="Allen Pandey" 
                         class="img-fluid rounded-circle shadow-lg"
                         style="max-width: 400px; width: 100%; border: 8px solid rgba(255,255,255,0.2);">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Stats Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="p-4 bg-white rounded shadow-sm">
                    <i class="bi bi-code-square text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-2">Full-Stack Developer</h3>
                    <p class="text-muted">Building end-to-end web solutions</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 bg-white rounded shadow-sm">
                    <i class="bi bi-cloud text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-2">Cloud Enthusiast</h3>
                    <p class="text-muted">Experienced with Azure and AWS</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 bg-white rounded shadow-sm">
                    <i class="bi bi-graph-up text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-2">Problem Solver</h3>
                    <p class="text-muted">Turning complex ideas into reality</p>
                </div>
            </div>
        </div>
    </div>
</section>

