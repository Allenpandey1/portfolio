<!-- Page Header -->
<section class="bg-primary text-white py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-3">Get In Touch</h1>
                <p class="lead">Have a question or want to work together? I'd love to hear from you!</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- Success Message -->
                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i><%= successMessage %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="card-title mb-4">
                            <i class="bi bi-envelope-paper text-primary me-2"></i>Send me a message
                        </h3>

                        <form action="/contact" method="post">
                            <!-- Name Field -->
                            <div class="mb-3">
                                <label for="name" class="form-label fw-bold">
                                    <i class="bi bi-person me-1"></i>Your Name
                                </label>
                                <input type="text" 
                                       id="name" 
                                       name="name" 
                                       class="form-control form-control-lg <%= errors && errors.find(e => e.param === 'name') ? 'is-invalid' : '' %>" 
                                       placeholder="Enter your name" 
                                       value="<%= formData.name || '' %>" 
                                       required />
                                <% if (errors) { %>
                                    <% errors.filter(e => e.param === 'name').forEach(function(error) { %>
                                        <div class="invalid-feedback"><%= error.msg %></div>
                                    <% }); %>
                                <% } %>
                            </div>

                            <!-- Email Field -->
                            <div class="mb-3">
                                <label for="email" class="form-label fw-bold">
                                    <i class="bi bi-envelope me-1"></i>Your Email
                                </label>
                                <input type="email" 
                                       id="email" 
                                       name="email" 
                                       class="form-control form-control-lg <%= errors && errors.find(e => e.param === 'email') ? 'is-invalid' : '' %>" 
                                       placeholder="Enter your email address" 
                                       value="<%= formData.email || '' %>" 
                                       required />
                                <% if (errors) { %>
                                    <% errors.filter(e => e.param === 'email').forEach(function(error) { %>
                                        <div class="invalid-feedback"><%= error.msg %></div>
                                    <% }); %>
                                <% } %>
                            </div>

                            <!-- Message Field -->
                            <div class="mb-4">
                                <label for="message" class="form-label fw-bold">
                                    <i class="bi bi-chat-left-text me-1"></i>Message
                                </label>
                                <textarea id="message" 
                                          name="message" 
                                          class="form-control <%= errors && errors.find(e => e.param === 'message') ? 'is-invalid' : '' %>" 
                                          rows="6" 
                                          placeholder="Enter your message..." 
                                          required><%= formData.message || '' %></textarea>
                                <% if (errors) { %>
                                    <% errors.filter(e => e.param === 'message').forEach(function(error) { %>
                                        <div class="invalid-feedback"><%= error.msg %></div>
                                    <% }); %>
                                <% } %>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-send me-2"></i>Send Message
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

