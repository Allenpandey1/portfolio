<!-- Hero Header -->
<section class="py-5" style="background: linear-gradient(135deg, rgba(0, 212, 255, 0.1) 0%, rgba(131, 56, 236, 0.1) 100%); margin-top: 80px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-3 fw-bold mb-3">Get In Touch</h1>
                <p class="lead text-muted">Have a project in mind? Let's build something amazing together!</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- Success Message -->
                <% if (successMessage) { %>
                    <div class="alert alert-success alert-dismissible fade show glass-card" role="alert" style="background: rgba(0, 200, 83, 0.2); border-color: rgba(0, 200, 83, 0.5);">
                        <i class="bi bi-check-circle me-2"></i><strong>Success!</strong> <%= successMessage %>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="glass-card fade-in">
                    <h3 class="mb-4 text-gradient">
                        <i class="bi bi-envelope-paper me-2"></i>Send me a message
                    </h3>

                    <form action="/contact" method="post">
                        <!-- Name Field -->
                        <div class="mb-4">
                            <label for="name" class="form-label-modern">
                                <i class="bi bi-person me-1"></i>Your Name
                            </label>
                            <input type="text" 
                                   id="name" 
                                   name="name" 
                                   class="form-control form-control-modern <%= errors && errors.find(e => e.param === 'name') ? 'is-invalid' : '' %>" 
                                   placeholder="Enter your name" 
                                   value="<%= formData.name || '' %>" 
                                   required />
                            <% if (errors) { %>
                                <% errors.filter(e => e.param === 'name').forEach(function(error) { %>
                                    <div class="invalid-feedback d-block"><%= error.msg %></div>
                                <% }); %>
                            <% } %>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-4">
                            <label for="email" class="form-label-modern">
                                <i class="bi bi-envelope me-1"></i>Your Email
                            </label>
                            <input type="email" 
                                   id="email" 
                                   name="email" 
                                   class="form-control form-control-modern <%= errors && errors.find(e => e.param === 'email') ? 'is-invalid' : '' %>" 
                                   placeholder="Enter your email address" 
                                   value="<%= formData.email || '' %>" 
                                   required />
                            <% if (errors) { %>
                                <% errors.filter(e => e.param === 'email').forEach(function(error) { %>
                                    <div class="invalid-feedback d-block"><%= error.msg %></div>
                                <% }); %>
                            <% } %>
                        </div>

                        <!-- Message Field -->
                        <div class="mb-4">
                            <label for="message" class="form-label-modern">
                                <i class="bi bi-chat-left-text me-1"></i>Message
                            </label>
                            <textarea id="message" 
                                      name="message" 
                                      class="form-control form-control-modern <%= errors && errors.find(e => e.param === 'message') ? 'is-invalid' : '' %>" 
                                      rows="6" 
                                      placeholder="Tell me about your project..." 
                                      required><%= formData.message || '' %></textarea>
                            <% if (errors) { %>
                                <% errors.filter(e => e.param === 'message').forEach(function(error) { %>
                                    <div class="invalid-feedback d-block"><%= error.msg %></div>
                                <% }); %>
                            <% } %>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-modern btn-primary-modern">
                                <i class="bi bi-send me-2"></i>Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

