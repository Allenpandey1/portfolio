<!-- Hero Header -->
<section class="py-5" style="background: linear-gradient(135deg, rgba(0, 212, 255, 0.1) 0%, rgba(131, 56, 236, 0.1) 100%); margin-top: 80px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-3 fw-bold mb-3">My Projects</h1>
                <p class="lead text-muted">Innovative solutions and cutting-edge applications I've built</p>
            </div>
        </div>
    </div>
</section>

<!-- Projects Grid -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <% projects.forEach(function(project, index) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="project-card-modern fade-in" style="animation-delay: <%= index * 0.1 %>s;">
                        <div class="p-4" style="position: relative; z-index: 1; height: 100%; display: flex; flex-direction: column;">
                            <div class="project-icon">
                                <i class="bi bi-folder-fill"></i>
                            </div>
                            <h5 class="mb-3 fw-bold" style="color: var(--light);"><%= project.title %></h5>
                            <p class="text-muted flex-grow-1 mb-4" style="line-height: 1.7;">
                                <%= project.description %>
                            </p>
                            
                            <!-- Technologies -->
                            <div class="project-tags mb-4">
                                <% project.technologies.split(',').forEach(function(tech) { %>
                                    <span class="project-tag"><%= tech.trim() %></span>
                                <% }); %>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="mt-auto pt-3 border-top" style="border-color: rgba(0, 212, 255, 0.2) !important;">
                                <div class="d-flex gap-2">
                                    <a href="<%= project.githubUrl %>" 
                                       target="_blank" 
                                       rel="noopener noreferrer" 
                                       class="btn btn-modern btn-primary-modern btn-sm flex-fill"
                                       style="font-size: 0.75rem; padding: 0.5rem 1rem;">
                                        <i class="bi bi-github me-1"></i>GitHub
                                    </a>
                                    <% if (project.liveUrl) { %>
                                        <a href="<%= project.liveUrl %>" 
                                           target="_blank" 
                                           rel="noopener noreferrer" 
                                           class="btn btn-modern btn-outline-modern btn-sm flex-fill"
                                           style="font-size: 0.75rem; padding: 0.5rem 1rem;">
                                            <i class="bi bi-box-arrow-up-right me-1"></i>Live
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5" style="background: var(--dark-light);">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="glass-card fade-in">
                    <h3 class="mb-4">Want to see more?</h3>
                    <p class="text-muted mb-4 lead">
                        Check out my GitHub profile for more projects and contributions. 
                        I'm always working on new ideas and learning new technologies.
                    </p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a href="https://github.com/allenpandey" 
                           target="_blank" 
                           rel="noopener noreferrer" 
                           class="btn btn-modern btn-primary-modern">
                            <i class="bi bi-github me-2"></i>Visit My GitHub
                        </a>
                        <a href="/contact" class="btn btn-modern btn-outline-modern">
                            <i class="bi bi-envelope me-2"></i>Let's Collaborate
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
